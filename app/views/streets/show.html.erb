<% content_for :title do %>
	<%= @street.name %>
<% end %>

<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

<!-- ----------------- -->

   <div id="<%= dom_id @street %>" class="relative">
	
   	<% comment ||= false %>
   	<% if comment %>
   		<div class="bg-razzmicberry text-white py-1 px-3 text-sm"><%= render partial: 'layouts/icons/comment' %><%= @street.comment%><span class="text-xs"><%= @street.updated_at.strftime('%d/%m/%y %k:%m')%></span>
		</div>
   	<% end %>
	
	<div class="print:hidden">
   	<% if user_signed_in? %>
   		<%= link_to edit_street_path(@street), class: "bg-sky-200/50 hover:bg-sky-300 text-sky-600 font-medium py-1 px-3 rounded-lg inline-flex items-center absolute bottom-3 right-3" do %>
   			<%= render "layouts/icons/wrench" %>
   		<% end %>
		<%= button_to "Destroy this street", street_path(@street), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
   	<% end %>
	</div>
	 <div class="print:hidden">
		 <%= @street.position %> - <%= @street.name %>
	 </div>
	 <h1 class="font-bold text-5xl -skew-y-3 text-white uppercase text-balance w-full px-8 pt-8 pb-16"><span class="bg-darkgreen">Que proposent les écolos pour
			<%= "#{@street.name_with_context} ?" %></span></h1>
     
   	    
   	    <div class="mb-2 text-darkgreen text-balance">
   				<%= @street.body %>
   		</div>

   </div>
  	<div class=" grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 xxl:grid-cols-2 gap-5">
 		  <%#= render partial: 'cards/card', collection: @street.cards %>
     </div>
<!-- ------------------ -->
    
	<%= link_to "Retour à la liste", streets_path, class: "mt-3 mb-3 ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium print:hidden" %>
  </div>
</div>
