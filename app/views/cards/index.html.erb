<% content_for :title do %>
Accueil
<% end %>


<div class="w-full container">

  <div class="flex justify-between items-center mb-3">
    <h1 class="font-bold text-5xl"><span class="bg-darkgreen text-isabellinewhite uppercase">Avec Ecolo,<br>ça bouge<br>à Profondeville</span></h1>
    <%= render partial: 'admin_buttons' %>
  </div>

  <div class="flex justify-between items-center mb-1">
    <h2 class="font-bold text-3xl text-razzmicberry">Nos 4 priorités</h2>
  </div>
  
  <div class="py-1 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xxl:grid-cols-6 gap-5">
      <%= render partial: 'pages/page', collection: @pages %>
  </div>
  
  <div class="flex justify-between items-center mb-2">
    <h2 class="font-bold text-3xl text-razzmicberry">En détail : tout notre bilan et nos propositions</h2>
  </div>

<div class="font-bold text-lg border-b-2 border-gray-200 mb-2">Explorer par ...</div>

<div class="flex flex-wrap md:flex-nowrap border-b-2 border-gray-200 mb-2">
	<div class="md:flex-none md:w-32 basis-full">Statut</div>
	<div class="flex-1 [&_a]:bg-fluogreen [&_a]:text-grapeblack">
		<%= render partial: 'tag', collection: ActsAsTaggableOn::Tag.for_context(:statuses).most_used %>
	</div>
</div>

<div class="flex flex-wrap md:flex-nowrap border-b-2 border-gray-200 mb-2"> 
	<div class="md:flex-none md:w-32 basis-full">Thème</div>
	<div class="flex-1">
		<%= render partial: 'tag', collection: ActsAsTaggableOn::Tag.for_context(:topics).most_used[0..9] %>
		<label for="toggle-more" class="inline-block bg-marinegreen hover:bg-razzmicberry rounded-full px-3 py-1 text-sm font-semibold text-isabellinewhite hover:text-isabellinewhite mr-2 mb-2" script="onclick:self.innerHTML=\'moins\';">plus (<%= ActsAsTaggableOn::Tag.for_context(:topics).most_used.size-10 %>)</label>
		<input type="checkbox" id="toggle-more">
		<div id="more-tags"><%= render partial: 'tag', collection: ActsAsTaggableOn::Tag.for_context(:topics).most_used[10..] %></div>		
</div>
	
</div>
<div class="flex flex-wrap md:flex-nowrap border-b-2 border-gray-200 mb-2"> 
	<div class="md:flex-none md:w-32 basis-full">Localité</div>
  	<div class="flex-1 [&_a]:bg-marinegreen">
		<%= render partial: 'tag', collection: ActsAsTaggableOn::Tag.for_context(:locations).most_used %>
	</div>
</div>

  <div class="py-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xxl:grid-cols-6 gap-5">
      <%= render partial: 'card', collection: @cards %>
  </div>
</div>

