<% content_for :title do %>
	<% @tags.each do |tag| %>
		#<%= tag.name%>
	<% end %>
<% end %>


<div class="w-full container">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-darkgreen">
		<% @tags.each do |tag| %>
			#<%= tag.name%>
		<% end %>
	</h1>
    <%= render partial: 'new_card_button' %>
  </div>
  
  <div>
	  <% unless @cards.size < 3 %>
	  	Combiner avec :
	  	<div>Localités : <%= render partial: 'related_tag', collection: @related_tags[:locations] %></div>
		<div>Thèmes : <%= render partial: 'related_tag', collection: @related_tags[:topics] %></div>
		<div>Statuts : <%= render partial: 'related_tag', collection: @related_tags[:statuses] %></div>
	  <% end %>
  </div>

  <div class="py-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xxl:grid-cols-6 gap-5">
      <%= render @cards %>
  </div>
</div>

