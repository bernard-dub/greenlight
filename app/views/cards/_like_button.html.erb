
	
	<%= turbo_frame_tag "card_like_#{card.id}", 'data-turbo-prefetch' => "false" do %>
		<% if !@likes.include?(card.id) %>
			<%= link_to card_like_path(card), data: {'no-turbolink' => true, 'turbo-frame': "card_like_#{card.id}"}, class: "like-button text-razzmicberry" do %>
				<%= render "layouts/icons/heart" %> <%= card.score %>
			<% end %>
		<% else %>
			<%= link_to card_unlike_path(card), data: {'no-turbolink' => true, 'turbo-frame': "card_like_#{card.id}"}, class: "like-button bg-razzmicberry text-isabellinewhite" do %>
				<%= render "layouts/icons/heart" %> <%= card.score %>
			<% end %>
		<% end %>
	<% end %>