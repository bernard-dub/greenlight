
<div id="<%= dom_id card %>" class="rounded-lg overflow-hidden shadow-lg bg-isabellinewhite border-2 border-transparent relative <% unless action_name == 'show' %> hover:shadow-none hover:border-darkgreen<% end %>">
	
	<div class="flex relative min-h-12">
		<% card.persisted_images.each do |image| %>
			<figure class="h-48 overflow-hidden">
				<%= link_to_unless (current_page?(card_path(card)) || card.body.blank?), (image_tag image.variant(:thumb), class:"object-cover min-h-48"), card do %>
				<%= image_tag image, class:"object-cover min-h-48" %>
				<% end %>
			</figure>
		<% end %>
		<span class="[&_a]:bg-fluogreen [&_a]:text-grapeblack absolute bottom-0 left-3"><%= render partial: 'tag', collection: card.statuses %></span>
	</div>
	
	<% if user_signed_in? %>
		<%if !card.published %><span class="bg-red-200/50 hover:bg-red-300 text-red-600 text-sm py-1 px-3 rounded-lg inline-flex items-center absolute bottom-3 left-3">NON PUBLIE</span><% end %>
		<%= link_to edit_card_path(card), class: "bg-sky-200/50 hover:bg-sky-300 text-sky-600 font-medium py-1 px-3 rounded-lg inline-flex items-center absolute bottom-3 right-3" do %>
			<%= render "layouts/icons/wrench" %>
		<% end %>
	<% end %>

  	<div class="pt-1 px-3 pb-3">
		
	    <div class="font-bold text-xl text-grapeblack">
			<%= link_to_unless (current_page?(card_path(card)) || card.body.blank?), card.title, card, class:"hover:underline" %>
		</div>
	    <div class="mb-2 text-darkgreen">
			<%= link_to_unless (current_page?(card_path(card)) || card.body.blank?), card.subtitle, card do %>
			<%= card.subtitle %>
			<%= "> Plus ..." unless (current_page?(card_path(card)) || card.body.blank?) %>
			<% end %>
		</div>
	    <div>
			<span ><%= render partial: 'tag', collection: card.topics %></span>
			<span class="[&_a]:bg-marinegreen"><%= render partial: 'tag', collection: card.locations %></span>
	    </div>
	    
  	</div>
  
</div>